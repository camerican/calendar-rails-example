<%= form_for user do |f| %>
	<%= f.label :name_first, "First Name" %>
	<%= f.text_field :name_first %>
	<%= f.label :name_last, "Last Name" %>
	<%= f.text_field :name_last %>
	<%= f.label :email %>
	<%= f.text_field :email %>
	<%= f.label :username %>
	<%= f.text_field :username %>
	<%= f.label :password %>
	<%= f.password_field :password %>
	<% if password_confirm %>
	<%= label_tag :password_confirm %>
	<%= password_field_tag :password_confirm %>
	<% end %>
	<%= f.submit %>
<% end %>